# .aliases

# profile
alias vb='vi ~/.bashrc'
alias vbp='vi ~/.bash_profile'
alias vz='vi ~/.zshrc'
alias reload="exec $SHELL -l"

# list stuff
alias l='ls -lFh'
alias ltr='ls -lFhtr'
alias ltrt='ls -lFhtr | tail'
alias la='ls -lAFh'
alias ld='ls -ldh */'

# misc
alias grep='grep --color'
alias G='grep'
alias H='head'
alias L='less'
alias dt='date +%Y%m%dT%H%M%S%z'
alias jobs='jobs -l'
alias h='history'
alias hg='history | grep'
alias ag='alias | grep'
alias eg='env | sort | grep'
alias env='env | sort'
alias less='less -I'
alias llast='less $(ls -1rt|tail -n1)'
alias rm='rm -i'
alias path='echo -e ${PATH//:/\\n}'
alias port='netstat -tulanp'
alias mem='free -m -t'

# for when tree is not installed
treea="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"
treed="find . -type d-print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"

# python
alias ccn='conda create --name'
alias cea='conda activate'
alias ced='conda deactivate'
alias cie='conda info --envs'
alias cl='conda list'
alias ipython='ipython --TerminalInteractiveShell.editing_mode=vi --colors="Linux"'
alias jupyter-lab='jupyter-lab --ip=localhost'

# git
alias ga='git add'
alias gb='git branch'
alias gco='git checkout'
alias gc='git commit'
alias gcm='git commit -m'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdcw='git diff --cached --word-diff'
alias gds='git diff --staged'
alias gpl='git pull'
alias gpl='git pull origin'
alias gps='git push'
alias gpso='git push origin'
alias gs='git status'
alias gss='git status --short'
alias gurl='git config --get remote.origin.url'
alias gpristine='git reset --hard && git clean -dfx'

# docker
alias di='docker image'
alias dc='docker container'
alias ds='docker service'
alias dinfo='docker info'

# bat - https://github.com/sharkdp/bat
alias b='bat -p'
alias bat='bat -p'
alias batn='bat -n'

# hadoop
alias yal='yarn application -list'
alias yas='yarn application -status'
alias hls='hadoop fs -ls'
alias hput='hadoop fs -put'
alias hget='hadoop fs -get'
alias hcp='hadoop fs -cp'
alias hcat='hadoop fs -cat'
alias hrm='hadoop fs -rm'
alias htail='hadoop fs -tail'
alias hmkdir='hadoop fs -mkdir'
alias hchmod='hadoop fs -chmod'
alias hgetfacl='hadoop fs -getfacl'
alias hdf='hadoop fs -df'
alias hdu='hadoop fs -du'
alias hmv='hadoop fs -mv'

# timer
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'

# end
